/* pages/future/index.wxss */
.news{
  /* border: 1rpx solid red; */
  display: flex; 
  align-items: center;
}
.news .smallPic{
  width: 128rpx;
  height: 180rpx;
  padding-left:  20rpx; 
}
.movieMessage{
  /* border: 1rpx solid red; */
  border-bottom: 1rpx solid rgba(119, 119, 119, 0.459);
  padding-left: 15rpx;
  width: 70%;
  height: 220rpx;
  line-height: 40rpx;
  font-size: 30rpx;
}
.movieName{
  overflow: hidden;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.types{
font-size: 20rpx;
  color:#666;
  font-family: Helvetica;
}
.director{
  font-size: 20rpx;
  color: #666;
}
.movieMessage  .star-name{
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* border: 1rpx solid red; */
  width:500rpx;
  height: 44rpx;
  font-size: 20rpx;
  color: #666;
  font-family: Hiragino Sans GB;
}
.movieMessage .star{
  padding-left: 5rpx;
}
 .movieTime{
  font-size: 20rpx;
  color: #666;
  font-family: Hiragino Sans GB;
}
