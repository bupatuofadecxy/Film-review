/* pages/test/test.wxss */
.hot{
  display: flex; 
  align-items: center;
}
.hot .smallPic{
  width: 128rpx;
  height: 180rpx;
  padding-left:  20rpx; 
}
.movieMessage{
  border-bottom: 1rpx solid rgba(119, 119, 119, 0.459);
  padding-left: 15rpx;
  width: 70%;
  height: 220rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.movieName{
  overflow: hidden;
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.movieType{
  font-size: 20rpx;
  color:#666;
  font-family: Helvetica;
}
.movieMessage .grade{
  font-size: 20rpx;
  font-weight: bold;
  color: #faaf00;
  display: inline-flex;
  flex-direction: row;
}
.movieMessage .type{
  color: #333;
  padding-right: 15rpx; 
}
.movieMessage  .star-name{
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  overflow: hidden;
  /* border: 1rpx solid red; */
  width:500rpx;
  height: 44rpx;
  font-size: 20rpx;
  color: #666;
  font-family: Hiragino Sans GB;
}
.movieMessage .star{
  padding-left: 5rpx;

}
